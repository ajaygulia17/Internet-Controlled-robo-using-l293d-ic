<!DOCTYPE html>
<html>
    <head>
        <title>LED Control</title>
        <script type="text/javascript" src="https://cloud.boltiot.com/static/js/boltCommands.js"></script>
        <script>
        setKey('{{ApiKey}}','{{Name}}');
        </script>
        <script>
            function front(){
                var pin = [1, 2, 3, 4];
                var val = ['HIGH', 'LOW', 'HIGH', 'LOW']
                digitalMultiWrite(pin,val);
            }
            function left(){
                var pin = [1, 2, 3, 4];
                var val = ['HIGH', 'LOW', 'LOW', 'HIGH']
                digitalMultiWrite(pin,val);
            }
            function right(){
                var pin = [1, 2, 3, 4];
                var val = ['LOW', 'HIGH', 'HIGH', 'LOW']
                digitalMultiWrite(pin,val);
            }
            function back(){
                var pin = [1, 2, 3, 4];
                var val = ['LOW', 'HIGH', 'LOW', 'HIGH']
                digitalMultiWrite(pin,val);
            }
            function stop(){
                var pin = [1, 2, 3, 4];
                var val = ['LOW', 'LOW', 'LOW', 'LOW']
                digitalMultiWrite(pin,val);
            }
        </script>
    </head>
    <body>
        <center>

        <button onclick="front();" style="height:50px;width:50px">Front</button><br><br>
        <button onclick="left();" style="height:50px;width:50px">Left</button>
        <button onclick="stop();" style="height:50px;width:50px">Stop</button>
        <button onclick="right();" style="height:50px;width:50px">Right</button><br><br>
        <button onclick="back();" style="height:50px;width:50px">Back</button>
        
        </center>
    </body>
</html>
